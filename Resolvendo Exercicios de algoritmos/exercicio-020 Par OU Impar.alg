algoritmo "exercicio-20 Par OU Impar"
// Função :
// Autor :
// Data : 16/07/2020
// Seção de Declarações 
var

   numero: inteiro

inicio

      escreva("Digite um número inteiro: ")
      leia(numero)
      
      se (numero % 2 = 0) entao
         escreval(numero," é par.")
      senao
         escreval(numero," é impar.")
      fimse

fimalgoritmo
